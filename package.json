{
  "name": "smurfjs",
  "version": "1.0.0",
  "description": "Microservices for node.js",
  "main": "index.js",
  "mainDir": "dist",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint --fix -c tslint.json -p tsconfig.json",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "./node_modules/.bin/tsc-watch --onSuccess \"npm run start\"",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "dev": "npm-run-all clean lint tsc dev:start",
    "smurf": "plop --plopfile src/core/generator/index.ts"
  },
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run build"
    }
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/nodemailer": "^6.4.0",
    "@types/redis": "^2.8.28",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "express-winston": "^4.0.5",
    "glob": "^7.1.6",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.14",
    "redis": "^3.0.2",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^4.1.6",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.3.0-alpha.24",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/fs-extra": "^9.0.2",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.11.8",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-ui-express": "^4.1.3",
    "fs-extra": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "plop": "^2.7.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "_moduleAliases": {
    "@core": "dist/core",
    "@utilities": "dist/utilities",
    "@base": "dist",
    "@config": "dist/config",
    "@models": "dist/models",
    "@services": "dist/services",
    "@error-handling": "dist/error-types",
    "@policies": "dist/policies",
    "@guards": "dist/guards"
  }
}
